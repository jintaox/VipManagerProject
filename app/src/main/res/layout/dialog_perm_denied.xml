<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.hjq.shape.layout.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="28dp"
        android:layout_marginHorizontal="150dp"
        app:shape_solidColor="@color/white"
        app:shape_radius="8dp"
        tools:ignore="MissingDefaultResource">

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_title_dpd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="开启存储权限"
            android:textSize="@dimen/general_big_size"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            app:shape_solidColor="#005456"
            app:shape_topLeftRadius="7dp"
            app:shape_topRightRadius="7dp"/>

        <TextView
            android:id="@+id/tv_desc_dpd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="23dp"
            android:textSize="@dimen/general_big_size"
            android:gravity="center_horizontal"
            android:text="为保证功能正常使用，请开启存储权限"
            android:textColor="@color/black"/>

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_confirm_dpd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="100dp"
            android:gravity="center"
            android:text="去开启"
            android:textColor="@color/white"
            android:textSize="@dimen/general_big_size"
            android:textStyle="bold"
            app:shape_radius="20dp"
            app:shape_solidColor="#005456"/>

    </com.hjq.shape.layout.ShapeLinearLayout>
</RelativeLayout>
