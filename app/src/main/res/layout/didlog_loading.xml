<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:shape_solidColor="#88222222"
    app:shape_radius="8dp"
    android:orientation="vertical"
    android:paddingLeft="13dp"
    android:paddingRight="13dp">

    <ImageView
        android:id="@+id/iv_loading"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/dialog_loading_icon"
        android:layout_marginTop="15dp" />
    <TextView
        android:id="@+id/tv_loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请稍等..."
        android:layout_gravity="center_horizontal"
        android:textColor="#EEEEEE"
        android:textSize="@dimen/general_middle_size"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="13dp"/>

</com.hjq.shape.layout.ShapeLinearLayout>